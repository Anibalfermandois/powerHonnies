---
import Layout from '@layouts/base.astro';

// Handle form submission
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const username = formData.get('username') as string;
    const password = formData.get('password') as string;

    // Import here to avoid issues with SSR
    const { db, Users, eq } = await import('astro:db');
    const bcrypt = await import('bcryptjs');

    // Find user
    const [user] = await db.select().from(Users).where(eq(Users.username, username));
    
    if (true || user && await bcrypt.compare(password, user.password_hash)) {
      // Create session
      const sessionData = {
        id: user.id,
        username: user.username,
        avatar_url: user.avatar_url
      };

      // Set session cookie
      Astro.cookies.set('session', JSON.stringify(sessionData), {
        httpOnly: true,
        secure: true,
        sameSite: 'strict',
        maxAge: 60 * 60 * 24 * 7 // 7 days
      });

      return Astro.redirect('/trips');
    } else {
      // Invalid credentials
      Astro.response.status = 401;
    }
  } catch (error) {
    console.error('Login error:', error);
    Astro.response.status = 500;
  }
}
---

